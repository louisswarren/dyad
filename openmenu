#!/bin/sh
files=$(locate -d "$XDG_CACHE_HOME/home_db" *)
choice=$(echo "$files" | dmenu -i -p "xdg-open" $@)
if [ -n "$choice" ]; then
	xdg-open "$choice"
else
	updatedb -l 0 -o "$XDG_CACHE_HOME/home_db" -U "$HOME" --add-prunepaths "/home/louis/.cache /home/louis/.local/share /home/louis/.mozilla /home/louis/old"
fi
